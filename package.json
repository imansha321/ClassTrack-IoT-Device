{
  "name": "classtrack",
  "version": "1.0.0",
  "description": "ClassTrack - Unified IoT Attendance and Air Quality Monitoring System",
  "main": "Server/dist/index.js",
  "scripts": {
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "cd Server && npm run dev",
    "dev:client": "cd Client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd Client && npm run build",
    "build:server": "cd Server && npm run build",
    "start": "cd Server && npm start",
    "install:all": "npm install && cd Server && npm install && cd ../Client && npm install",
    "prisma:generate": "cd Server && npm run prisma:generate",
    "prisma:migrate": "cd Server && npm run prisma:migrate",
    "prisma:studio": "cd Server && npm run prisma:studio",
    "prisma:seed": "cd Server && npm run prisma:seed",
    "setup": "npm run install:all && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed"
  },
  "keywords": [
    "attendance",
    "iot",
    "air-quality",
    "fingerprint",
    "esp32",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "http-proxy-middleware": "^3.0.5"
  }
}
